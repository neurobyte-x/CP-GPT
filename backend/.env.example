# ── Application ──────────────────────────────────────────────────
APP_NAME="CP Path Builder"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# ── Server ───────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ── Database (Neon DB) ────────────────────────────────────────────
# Get your connection string from https://console.neon.tech
DATABASE_URL=postgresql+asyncpg://user:pass@ep-xxx.us-east-2.aws.neon.tech/cppath
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_SSL=true

# ── Redis ────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# ── Authentication ───────────────────────────────────────────────
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE-ME-IN-PRODUCTION-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# ── Codeforces API ───────────────────────────────────────────────
CF_API_BASE_URL=https://codeforces.com/api
CF_API_KEY=
CF_API_SECRET=
CF_SYNC_INTERVAL_HOURS=6
CF_REQUEST_DELAY_SECONDS=2.0

# ── AI / LLM (Gemini) ─────────────────────────────────────────────
# Get your API key from https://aistudio.google.com/apikey
GEMINI_API_KEY=
LLM_MODEL=gemini-2.5-flash
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.3
COACHING_ENABLED=true

# ── Background Tasks ─────────────────────────────────────────────
SYNC_ON_STARTUP=true
TASK_CONCURRENCY=4

# ── Path Generation ──────────────────────────────────────────────
DEFAULT_PATH_SIZE=30
MAX_PATH_SIZE=100
RATING_STEP=100
MIN_PROBLEM_RATING=800
MAX_PROBLEM_RATING=3500
